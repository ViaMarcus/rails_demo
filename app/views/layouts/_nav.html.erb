<header>
    <% if user_signed_in? %>
        <h3><%= "Welcome, #{ current_user.username }" %></h3>
    <% else %>
        <h3><%= "Welcome to Planket!" %> </h3>
    <% end %>
    <nav>
        <a><%= link_to "Planket Home", root_path %></a> | 
        <% if !user_signed_in? %>
            <a><%= link_to "Sign up", new_user_registration_path %></a> |
            <a><%= link_to "Log in", new_user_session_path %></a> |
        <% else %>
            <a><%= link_to "Log out", destroy_user_session_path, method: :delete %> </a>
        <% end %>
    </nav>
</header>